<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bravo.MainMenuController">
 <Label text="Welcome to the database manager." />
 <Label text="What do you wish to do?" />
    <children>
        <Button fx:id="mainMenuButton" text="Search" onAction="#switchToSearch" />
    </children>
    <children>
        <Button fx:id="mainMenuButton" text="Create entry" onAction="#switchToInsert" />
    </children>
    <children>
        <Button fx:id="mainMenuButton" text="Modify entry" onAction="#switchToModify" />
    </children>
    <children>
        <Button fx:id="mainMenuButton" text="Delete entry" onAction="#switchToDelete" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
